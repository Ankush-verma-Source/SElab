    <!-- Flashcards Tab (Hidden by default) -->
<div id="flashcards" class="feature-card hidden">
  <h2>Create Flashcards</h2>
  <div class="upload-section">
    <div class="upload-prompt">
      <i class="fas fa-file-upload"></i>
      Upload your document to create flashcards
    </div>

    <form action="/user/generate/flashcards" method="post" id="flashcard-form" enctype="multipart/form-data">
      <div
        id="drop-area-flashcard"
        class="drop-area"
        onclick="document.getElementById('file-upload-flashcard').click()"
        ondragover="event.preventDefault(); this.classList.add('dragover')"
        ondragleave="this.classList.remove('dragover')"
        ondrop="handleFileDropFlashcard(event)"
      >
        <p id="drop-text-flashcard">Drag & drop your file here or click to browse</p>
        <div id="file-details-flashcard" class="file-info hidden"></div>
      </div>

      <input
        type="file"
        id="file-upload-flashcard"
        name="file"
        class="hidden"
        accept=".txt,.pdf,.doc,.docx"
        onchange="handleFileSelectFlashcard()"
      />

      <div class="form-group">
        <label for="flashcard-difficulty">Difficulty Level:</label>
        <select id="flashcard-difficulty" name="difficulty">
          <option value="basic">Basic</option>
          <option value="intermediate" selected>Intermediate</option>
          <option value="advanced">Advanced</option>
        </select>
      </div>

      <div class="btnn-group">
        <button type="reset" class="btnn btnn-secondary" onclick="resetFormFlashcard()">Reset</button>
        <button type="submit" class="btnn btnn-primary" onclick="generateFlashcards(event)">
  Create Flashcards
</button>
      </div>
    </form>
  </div>
</div>


    <!-- Summary Generator Tab (Hidden by default) -->
    <div id="summaries" class="feature-card hidden">
      <h2>Generate Document Summary</h2>
      <div class="upload-section">
        <div class="upload-prompt">
          <i class="fas fa-file-upload"></i>
          Upload your document to generate a summary
        </div>

        <form action="/user/generate/summary" method="post" id="generate-form" enctype="multipart/form-data">
        <div
          id="drop-area-summary"
          class="drop-area"
          onclick="document.getElementById('file-upload-summary').click()"
          ondragover="event.preventDefault(); this.classList.add('dragover')"
          ondragleave="this.classList.remove('dragover')"
          ondrop="handleFileDropSummary(event)"
        >
          <p id="drop-text-summary">Drag & drop your file here or click to browse</p>
          <div id="file-details-summary" class="file-info hidden"></div>
        </div>

          
        <input
          type="file"
          id="file-upload-summary"
          name="file"
          class="hidden"
          accept=".txt,.pdf,.doc,.docx"
          onchange="handleFileSelectSummary()"
        />

        <div class="form-group">
          <label for="summary-length">Summary Length:</label>
          <select id="summary-length" name="summaryLength">
            <option value="short">Short (2-3 paragraphs)</option>
            <option value="medium" selected>Medium (4-5 paragraphs)</option>
            <option value="long">Long (6+ paragraphs)</option>
          </select>
        </div>

        <div class="btnn-group">
          <button type="reset" class="btnn btnn-secondary"  onclick="resetFormSummary()">Reset</button>
          <button type="submit" class="btnn btnn-primary"onclick="generateSummary()">
            Generate Summary
          </button>
        </div>
      </form>
      </div>
    </div>

    <!-- Quiz Maker Tab (Hidden by default) -->
    <div id="quizzes" class="feature-card hidden">
      <h2>Create Custom Quiz</h2>
      <div class="upload-section">
        <div class="upload-prompt">
          <i class="fas fa-file-upload"></i>
          Upload your document to create a quiz
        </div>

         <form action="/user/generate/quiz" method="post" id="generate-form" enctype="multipart/form-data">
        <div
          id="drop-area-quiz"
          class="drop-area"
          onclick="document.getElementById('file-upload-quiz').click()"
          ondragover="event.preventDefault(); this.classList.add('dragover')"
          ondragleave="this.classList.remove('dragover')"
          ondrop="handleFileDropQuiz(event)"
        >
          <p id="drop-text-quiz">Drag & drop your file here or click to browse</p>
          <div id="file-details-quiz" class="file-info hidden"></div>
        </div>

             
        <input
          type="file"
          id="file-upload-quiz"
          name="file"
          class="hidden"
          accept=".txt,.pdf,.doc,.docx"
          onchange="handleFileSelectQuiz()"
        />


        <div class="form-group">
          <label for="quiz-type">Quiz Type:</label>
          <select id="quiz-type" name="quizType">
            <option value="multiple-choice">Multiple Choice</option>
            <option value="true-false">True/False</option>
            <option value="short-answer">Short Answer</option>
            <option value="mix" selected>Mix of Types</option>
          </select>
        </div>

        <div class="btnn-group">
          <button type="reset" class="btnn btnn-secondary" onclick="resetFormQuiz()">Reset</button>
          <button type="submit" class="btnn btnn-primary" onclick="generateQuiz()">Create Quiz</button>
        </div>
      </form>
      </div>
    </div>


<div id="code-tools" class="feature-card hidden">
  <h2>Code Explanation & Review</h2>
  <div class="upload-section">
    <div class="upload-prompt">
      <i class="fas fa-code"></i>
      Upload or paste your code to get explanations and feedback
    </div>

    <form action="/user/generate/code-tools" method="post" id="code-review-form" enctype="multipart/form-data">
      <!-- File Upload -->
      <div
        id="drop-area-code"
        class="drop-area"
        onclick="document.getElementById('file-upload-code').click()"
        ondragover="event.preventDefault(); this.classList.add('dragover')"
        ondragleave="this.classList.remove('dragover')"
        ondrop="handleFileDropCode(event)"
      >
        <p id="drop-text-code">Drag & drop your code file here or click to browse</p>
        <div id="file-details-code" class="file-info hidden"></div>
      </div>

      <input
        type="file"
        id="file-upload-code"
        name="file"
        class="hidden"
        accept=".py,.java,.c,.cpp,.js,.ts,.html,.css,.txt"
        onchange="handleFileSelectCode()"
      />

      <!-- OR Paste Code -->
      <div class="form-group">
        <label for="code-input">Or Paste Your Code Below:</label>
        <textarea
          id="code-input"
          name="codeText"
          rows="6"
          placeholder="Paste your code here..."
          style="border: 2px solid black; border-radius: 8px; padding: 10px; width: 100%;"
        ></textarea>
      </div>

      <!-- Select Operation -->
      <div class="form-group">
        <label for="operation">Select Action:</label>
        <select id="operation" name="operation">
          <option value="explain" selected>Explain Code</option>
          <option value="review">Review Code</option>
        </select>
      </div>

      <!-- Buttons -->
      <div class="btnn-group">
        <button type="reset" class="btnn btnn-secondary" onclick="resetFormCode()">Reset</button>
        <button type="submit" class="btnn btnn-primary" onclick="analyzeCode()">Analyze Code</button>

      </div>
    </form>
  </div>
</div>


  </div>
</div>




